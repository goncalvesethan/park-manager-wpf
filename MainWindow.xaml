<Window x:Class="ParkManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkManagerWPF"
        mc:Ignorable="d"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/notify_icon.ico">
    <Grid>
        <tb:TaskbarIcon x:Name="myNotifyIcon"
                    Visibility="Visible"
                    IconSource="/Resources/notify_icon.ico"
                    ToolTipText="ParkManager"
                    MenuActivation="RightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Afficher" Click="ShowMainWindow"/>
                    <MenuItem Header="Synchroniser" Click="SynchronizeData"/>
                    <Separator/>
                    <MenuItem Header="Se connecter"/>
                    <Separator/>
                    <MenuItem Header="Quitter" Click="ExitApplication"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        <Grid VerticalAlignment="Center" Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Widget Marque -->
                <Border Grid.Column="0" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Marque" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.Brand}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Widget Processeur -->
                <Border Grid.Column="1" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Processeur" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.Processor}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Widget RAM -->
                <Border Grid.Column="2" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="RAM (Mo)" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.RAM}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Widget Stockage -->
                <Border Grid.Column="3" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Stockage (Go)" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.Storage}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Widget Marque -->
                <Border Grid.Column="0" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Parc" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.Park}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Widget Processeur -->
                <Border Grid.Column="1" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Salle" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.Room}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Widget RAM -->
                <Border Grid.Column="2" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Adresse IP" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.IpAddress}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Widget Stockage -->
                <Border Grid.Column="3" Background="LightGray" CornerRadius="8" Padding="10" Margin="5">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Adresse MAC" FontWeight="Bold" FontSize="14" Foreground="DarkSlateGray" TextAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding Device.MacAddress}" FontSize="12" Foreground="Black" TextAlignment="Center" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

    </Grid>
</Window>
