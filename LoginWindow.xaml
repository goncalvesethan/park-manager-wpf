<Window x:Class="ParkManagerWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="400" Width="400" WindowStartupLocation="CenterScreen">

    <Grid VerticalAlignment="Center">
        <StackPanel Margin="20">
            <TextBlock Text="Email :" Margin="0,0,0,5"/>
            <TextBox Name="EmailTextBox" Height="30" Padding="5"/>

            <TextBlock Text="Mot de passe :" Margin="0,10,0,5"/>
            <PasswordBox Name="PasswordBox" Height="30" Padding="5"/>

            <Button Content="Se connecter" Margin="0,15,0,0" Padding="10"
                Click="Login"/>
        </StackPanel>
    </Grid>
</Window>
